<h3 class="sub-title mb-3">{{ title }}</h3>

<div class="card-columns">
  {%- for skill in source -%}
  <div class="card skill-progress">

    <label id="skill_label_{{ loop.index }}">{{ skill.name }}</label>
    <div class="progress">
      <div class="progress-bar bg-{{ skill.color }} progress-bar-striped scroll-transition"
        role="progressbar" data-width="{{ skill.percentage }}%"
        aria-valuenow="{{ skill.percentage }}" aria-valuemin="0" aria-valuemax="100"
        aria-labelledby="skill_label_{{ loop.index }}">
      </div>
    </div>

  </div>
  {%- endfor -%}
</div>